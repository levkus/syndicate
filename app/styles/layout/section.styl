section {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-x: 4rem;
  width: 12rem;
  height: 100%;
  font-size: 1.2rem;
  cursor: pointer;
  transition: .3s;

  &:not(.syndicate) {
    padding-top: 2rem;
  }

  +below(1920px) {
    width: 9rem;
    padding-x: 3rem;
  }

  +below(1600px) {
    width: 8.5rem
  }

  +below(1200px) {
    padding-x: 2rem;
    width: 6rem;
  }

  +below(640px) {
    width: 100%;
    height: 8.5%;

    &:not(.syndicate) {
      padding-top: 0rem;
    }
  }

  &:hover {
    .title .filter-icon {
      fill: lightness($grey, 80%);
    }
  }

  &.previewed {
    align-items: flex-start;
    padding-right: 10rem;
    padding-left: 4rem;
    width: calc(100% - (7 * 12rem));
    cursor: default;

    &.syndicate {
      align-items: center;
      justify-content: center;
      padding-x: 0;
    }

    +below(1920px) {
      padding-right: 8rem;
      padding-left: 3rem;
      width: calc(100% - (7 * 9rem));
    }

    +below(1600px) {
      width: calc(100% - (7 * 8.5rem));
    }

    +below(1200px) {
      padding-right: 6rem;
      padding-left: 2em;
      width: calc(100% - 42rem);
    }

    +below(640px) {
      padding-x: 2rem;
      width: 100%;
      height: calc(100% - 59.5%);

      .lead {
        padding-top: 1rem;
      }
    }

    .title {
      color: lightness($grey, 80%);

      .filter-icon {
        fill: lightness($grey, 80%);
      }
    }
  }
}


.title {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: left;

  &__text {
    position: absolute;
    left: 3rem;
    visibility: hidden;
    margin-left: .5rem;
    color: lightness($grey, 80%);
    text-transform: uppercase;
    white-space: nowrap;
    font-weight: 500;
    opacity: 0;

    &.visible {
      display: block;
    }
  }

  &__icon {
    font-size: 2rem;
    width: 2.5rem;
    height: 2.3rem;
    text-align: center;
  }
}
