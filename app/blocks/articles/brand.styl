.brand {
  display: block;
  padding: 4rem;

  +below(1024px) {
    padding: 2rem;
  }

  &__header {
    display: flex;
    margin-bottom: 4rem;

    +below(640px) {
      display: block;
    }
  }

  &__logo {
    display: block;
    flex-shrink: 0;
    margin-right: 4rem;
    width: 25rem;
    height: 20rem;
    background-position: center;
    background-size: contain;
    background-repeat: no-repeat;

    +below(640px) {
      width: 100%;
      margin-right: 0;
      margin-bottom: 4rem;
    }
  }

  &__meta {
    flex-grow: 1;
  }

  &__name {
		text-transform: uppercase;
		font-weight: 500;
    font-size: 1.5rem;
    line-height: 1.5rem;
  }

  &__website {
    display: block;
    margin-top: .5rem;
    margin-bottom: 2rem;
    color: lightness($grey, 80%);

    &:hover {
      color: #fff;
    }
  }

  &__since {
    margin-bottom: 2rem;
  }

  &__contacts {
    display: flex;
    justify-content: space-between;
    margin-bottom: 2rem;

    +below(1024px) {
      display: block;
    }
  }

  &__contacts-item {
    display: flex;
    flex-grow: 1;
    flex-flow: column nowrap;

    +below(1024px) {
      &:not(:last-child) {
        margin-bottom: 2rem;
      }
    }
  }

  &__contacts-name {
    margin-bottom: .5rem;
    text-transform: uppercase;
    font-weight: 500;
  }

  &__social {
    font-size: 1.5rem;
    a {
      margin-right: .5rem;
    }
  }
}

.electronic-mushroom {
  background-color: #3366CC;
  color: #fff;
}
