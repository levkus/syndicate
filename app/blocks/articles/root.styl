.root {
	display: none;

	&__container {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
	}

	&__carousel {
		width: 100%;
		height: 100%;
	}
}

article {
	position: absolute;
	top: 0;
	left: 0;
	display: block;
	padding: 4rem;
	width: 100%;
	height: 100%;

	+below(640px) {
		padding-x: 1.5rem;
		padding-y: 0;
		padding-bottom: 3.5rem;
	}

	.article-container {
		position: relative;
		// overflow: hidden;
		padding-right: 16px;
		height: 100%;

		+below(640px) {
			padding-top: 1.5rem;
			padding-right: 0;
		}
	}

	h1 {
		margin-bottom: 4rem;
		text-transform: uppercase;
		font-weight: 500;
		font-size: 1.5rem;
	}

	h2 {
		margin-bottom: 2rem;
		text-transform: uppercase;
		font-weight: 500;
		font-size: 1.3rem;
	}

  h3 {
    margin-bottom: 1rem;
		font-weight: 500;
    font-size: 1.1rem;
  }

	p {
		margin-bottom: 1rem;
	}
}
